---
import { Icon } from "astro-icon/components";
import { SITE, MENU, SIDEBAR, BASE_URL } from "../../utils/config";
import { __ } from "../../utils/i18n";
import SocialList from "../SocialList.astro";
import { getCollection } from "astro:content";

async function getStats() {
  const posts = await getCollection("blog");
  const allTags = new Set<string>();
  const allCategories = new Set<string>();
  posts.forEach((post) => {
    post.data.tags?.forEach((tag: string) => allTags.add(tag));
    post.data.categories?.forEach((category: string) => allCategories.add(category));
  });
  return {
    postCount: posts.length,
    tagCount: allTags.size,
    categoryCount: allCategories.size,
  };
}

const stats = await getStats();

const currentPath = Astro.url.pathname;

const avatarUrl = `${BASE_URL}${SIDEBAR.avatar}`;
---

<div class="sidebar-author">
  <img
    class="lazyload"
    data-src={avatarUrl}
    alt={SITE.author}
  />
  <div class="sidebar-author-name">{SITE.author}</div>
  <div class="sidebar-description">{SITE.description}</div>
</div>

<div class="sidebar-state">
  <a class="sidebar-state-article" href={`${BASE_URL}/archives`}>
    <div class="sidebar-state-number">{stats.postCount}</div>
    <div>{__("sidebar.post")}</div>
  </a>
  <a class="sidebar-state-tag" href={`${BASE_URL}/tags`}>
    <div class="sidebar-state-number">{stats.tagCount}</div>
    <div>{__("sidebar.tag")}</div>
  </a>
  <a class="sidebar-state-category" href={`${BASE_URL}/archives/categories`}>
    <div class="sidebar-state-number">{stats.categoryCount}</div>
    <div>{__("sidebar.category")}</div>
  </a>
</div>

<SocialList />

<div class="sidebar-menu">
  {MENU.map((item) => {
    if (item.name === 'posts' && item.items && item.items.length > 0) {
      // 将"文章"展开为"归档"、"标签"、"分类"
      return item.items.map((subItem) => {
        const itemUrl = `${BASE_URL}${subItem.url}`;
        const isActive = currentPath === itemUrl;
        return (
          <div class={`sidebar-menu-link-wrap ${isActive ? 'link-active' : ''}`}>
            <a class="sidebar-menu-link-dummy" href={itemUrl}></a>
            <div class="sidebar-menu-icon">
              <Icon name="fa6-solid:yin-yang" size={24} />
            </div>
            <div class="sidebar-menu-link">{__(subItem.name)}</div>
          </div>
        );
      });
    } else if (item.url) {
      // 普通菜单项
      const itemUrl = `${BASE_URL}${item.url}`;
      const isActive = currentPath === itemUrl;
      return (
        <div class={`sidebar-menu-link-wrap ${isActive ? 'link-active' : ''}`}>
          <a class="sidebar-menu-link-dummy" href={itemUrl}></a>
          <div class="sidebar-menu-icon">
            <Icon name="fa6-solid:yin-yang" size={24} />
          </div>
          <div class="sidebar-menu-link">{__(item.name)}</div>
        </div>
      );
    }
    return null;
  })}
</div>

<style lang="stylus">
  .sidebar-author {
    display: flex;
    flex-shrink: 0;
    flex-direction: column;
    align-items: center;

    img {
      display: block;
      min-width: 100px;
      min-height: 100px;
      width: 100px;
      height: 100px;
      border-radius: 50%;
      transition: opacity 0.3s;
      opacity: 0;
      object-fit: cover;
      margin: 20px;
      box-shadow: 0 0 15px 5px var(--color-red-6-shadow);
      will-change: transform;
      transition: 0.3s;

      &:hover {
        transform: scale(1.05);
      }
    }

    img.lazyloaded {
      opacity: 1;
      animation: blur 0.8s forwards;
    }

    .sidebar-author-name {
      font-weight: bold;
      font-size: 20px;
      color: var(--red-2);
      margin: 12px;
    }

    .sidebar-description {
      color: var(--grey-7);
      margin: 0 20px;
      line-height: 1.2;
    }
    
  }
:global([data-theme='dark']) .sidebar-author .sidebar-description 
      color: var(--grey-7-dark)

  .sidebar-state {
    display: flex;
    justify-content: center;
    padding: 24px 0;
    color: var(--red-0);
    opacity: 0.8;
    transition: opacity 0.5s, color 0.5s;

    &:hover {
      opacity: 1;
    }

    > a {
      display: flex;
      flex-direction: column;
      flex-shrink: 0;
      align-items: center;
      padding: 0 20px;
      text-decoration: none;
      color: inherit;
      cursor: pointer;

      div {
        margin: 4px 0;
      }
    }
  }

  .sidebar-state-article {
    border-right: 1px solid var(--red-1);
  }

  .sidebar-state-tag {
    border-left: 1px solid var(--red-1);
    border-right: 1px solid var(--red-1);
  }

  .sidebar-state-category {
    border-left: 1px solid var(--red-1);
  }

  .sidebar-state-number {
    font-weight: bold;
    font-size: 20px;
  }

  .sidebar-menu {
    margin: 20px 0;
    width: 100%;
  }

  .sidebar-menu-link-wrap {
    display: flex;
    position: relative;
    width: 70%;
    max-width: 200px;
    margin: 8px auto;
    justify-content: center;
    border: 10px var(--color-red-3-shadow) double;
    transition: background 0.5s;
    background: transparent;

    &:hover {
      background: var(--red-5);
    }
  }

  .sidebar-menu-icon {
    color: var(--color-link);
    opacity: 0.8;
    text-decoration: none;
    display: flex;
    padding: 5px;
    align-items: center;
    pointer-events: none;
  }

  .sidebar-menu-link-dummy {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
  }

  .sidebar-menu-link {
    color: var(--color-link);
    opacity: 0.8;
    text-decoration: none;
    display: block;
    padding: 10px 15px;
    font-weight: 700;
    pointer-events: none;
  }

  .link-active {
    background: var(--red-0);
    border: 10px var(--color-wrap) double;
    box-shadow: var(--shadow-red-6-shadow);
    opacity: 0.8;

    .sidebar-menu-link {
      color: #fff;
      opacity: 1;
    }

    .sidebar-menu-icon {
      opacity: 1;
      color: #fff;
    }
  }
</style>
