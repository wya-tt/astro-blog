---
// src/components/CategoryCard.astro
type Props = {
  title: string;
  count: number;
  backgroundImage: string;
};

const { title, count, backgroundImage } = Astro.props;
---

<div class="category-card">
  <div class="card-cover" style={`background-image: url('${backgroundImage}')`}></div>
  
  <div class="card-mask"></div>

  <div class="card-info">
    <h1 class="card-title">{title}</h1>
    <div class="card-meta">
      <span class="count-num">{count}</span>
      <span class="count-text">篇文章</span>
    </div>
  </div>
</div>

<style lang="stylus">
  .category-card {
    position: relative;
    width: 50%;
    height: 232px; // 建议与你的 post-wrap 高度保持一致 
    border-radius: 12px; // 匹配项目圆角风格 [cite: 21]
    overflow: hidden;
    background: var(--color-wrap); // 后备背景色 [cite: 21]
    margin-bottom: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease; // 匹配你的 post-wrapper 动画 [cite: 25]
  }

  .category-card:hover {
    transform: scale(1.01); // 匹配首页卡片悬停缩放 [cite: 29]
  }

  /* 背景图样式 */
  .card-cover {
    position: absolute;
    top: 0;
    left:0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center ;
    transition: transform 0.6s ease;
    z-index: 1;
  }

  .category-card:hover .card-cover {
    transform: scale(1.1); // 悬停时背景图轻微放大
  }

  /* 遮罩层：实现从透明到半透明黑色的渐变 */
  .card-mask {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, rgba(0,0,0,0.2), rgba(0,0,0,0.5));
    z-index: 2;
  }

  /* 文字信息 */
  .card-info {
    position: relative;
    z-index: 3;
    text-align: center;
    color: #ffffff;
    text-shadow: 0 2px 10px rgba(0,0,0,0.5); // 增加文字阴影提高可读性
  }

  .card-title {
    font-size: 40px;
    font-bold: bold;
    margin-bottom: 0.5rem;
  }

  .card-meta {
    font-size: 20px;
    opacity: 0.9;
    display: flex;
    align-items: baseline;
    justify-content: center;
    gap: 4px;
  }

  .count-num {
    font-size: 20px;
    font-weight: 600;
  }
</style>