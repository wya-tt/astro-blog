---
// src/components/CategoryCard.astro
import type { CollectionEntry } from "astro:content";
import { BASE_URL } from "../utils/config";

type Props = {
  title: string;
  count: number;
  backgroundImage: string;
  posts?: CollectionEntry<"blog">[];
};

const { title, count, backgroundImage, posts = [] } = Astro.props;
---

<div class="category-card">
  <div class="card-inner">
    <!-- 正面 -->
    <div class="card-front">
      <div class="card-cover" style={`background-image: url('${backgroundImage}')`}></div>
      <div class="card-mask"></div>
      <div class="card-info">
        <h1 class="card-title">{title}</h1>
        <div class="card-meta">
          <span class="count-num">{count}</span>
          <span class="count-text">篇文章</span>
        </div>
      </div>
    </div>
    
    <!-- 背面 -->
    <div class="card-back">
      <div class="card-back-content">
        <h2 class="card-back-title">{title}</h2>
        <div class="card-posts-list">
          {posts.length > 0 ? (
            posts.slice(0, 5).map((post) => (
              <a 
                class="card-post-item" 
                href={`${BASE_URL}/blog/${post.slug}`}
              >
                <span class="post-title-text">{post.data.title}</span>
              </a>
            ))
          ) : (
            <div class="no-posts">暂无文章</div>
          )}
        </div>
      </div>
    </div>
  </div>
</div>

<style lang="stylus">
  .category-card {
    position: relative;
    width: 50%;
    height: 232px;
    border-radius: 12px;
    margin-bottom: 32px;
    perspective: 1000px;
  }

  .card-inner {
    position: relative;
    width: 100%;
    height: 100%;
    transform-style: preserve-3d;
    transition: transform 0.6s;
  }

  .category-card:hover .card-inner {
    transform: rotateY(180deg);
  }
  
  .category-card:hover .card-front {
    pointer-events: none;
  }
  
  .category-card:hover .card-back {
    pointer-events: auto;
  }

  .card-front,
  .card-back {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    border-radius: 12px;
    overflow: hidden;
  }

  .card-back {
    transform: rotateY(180deg);
    background: var(--color-wrap);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
  }

  /* 正面样式 */
  .card-front {
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-wrap);
  }

  .card-cover {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    transition: transform 0.6s ease;
    z-index: 1;
  }

  .category-card:hover .card-cover {
    transform: scale(1.1);
  }

  .card-mask {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, rgba(0,0,0,0.2), rgba(0,0,0,0.5));
    z-index: 2;
  }

  .card-info {
    position: relative;
    z-index: 3;
    text-align: center;
    color: #ffffff;
    text-shadow: 0 2px 10px rgba(0,0,0,0.5);
  }

  .card-title {
    font-size: 40px;
    font-weight: bold;
    margin-bottom: 0.5rem;
  }

  .card-meta {
    font-size: 20px;
    opacity: 0.9;
    display: flex;
    align-items: baseline;
    justify-content: center;
    gap: 4px;
  }

  .count-num {
    font-size: 20px;
    font-weight: 600;
  }

  /* 背面样式 */
  .card-back-content {
    width: 100%;
    height: 100%;
    padding: 20px;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  .card-back-title {
    font-size: 24px;
    font-weight: bold;
    color: var(--red-2);
    margin-bottom: 16px;
    text-align: center;
    border-bottom: 2px solid var(--red-1);
    padding-bottom: 12px;
  }

  .card-posts-list {
    flex: 1;
    overflow-y: auto;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 8px;
    align-content: flex-start;
  }

  .card-post-item {
    display: flex;
    padding: 10px 14px;
    background: var(--red-5);
    border-radius: 6px;
    text-decoration: none;
    color: var(--red-1);
    transition: background 0.2s, transform 0.2s, box-shadow 0.2s;
    cursor: pointer;
    flex: 0 0 calc(50% - 4px);
    align-items: center;
    box-sizing: border-box;
    position: relative;
    z-index: 11;
    pointer-events: auto;
  }

  .card-post-item:hover {
    background: var(--red-4);
    transform: translateY(-2px);
    color: var(--red-0);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  .post-title-text {
    font-size: 15px;
    line-height: 1.5;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-word;
  }

  .no-posts {
    text-align: center;
    color: var(--grey-7);
    padding: 20px;
    font-size: 14px;
  }

  :global([data-theme='dark']) {
    .card-back {
      background: var(--color-wrap);
    }
    
    .card-back-title {
      color: var(--red-1);
    }
    
    .card-post-item {
      background: var(--red-5-5);
    }
    
    .card-post-item:hover {
      background: var(--red-6);
    }
    
    .no-posts {
      color: var(--grey-7-dark);
    }
  }

  /* 滚动条样式 */
  .card-posts-list::-webkit-scrollbar {
    width: 4px;
  }

  .card-posts-list::-webkit-scrollbar-track {
    background: transparent;
  }

  .card-posts-list::-webkit-scrollbar-thumb {
    background: var(--red-3);
    border-radius: 2px;
  }

  .card-posts-list::-webkit-scrollbar-thumb:hover {
    background: var(--red-2);
  }
</style>