---
import { getCollection, type CollectionEntry } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { __ } from "../../utils/i18n";
import Footer from "../../components/Footer.astro";
import HeaderTitle from "../../components/HeaderTitle.astro";
import { BASE_URL } from "../../utils/config";
import { Icon } from "astro-icon/components";

// 获取所有文章并统计分类
const posts = await getCollection("blog");
const categoriesMap: Map<string, CollectionEntry<"blog">[]> = new Map();

posts.forEach((post) => {
  if (Array.isArray(post.data.categories)) {
    post.data.categories.forEach((category) => {
      if (categoriesMap.has(category)) {
        categoriesMap.get(category)!.push(post);
      } else {
        categoriesMap.set(category, [post]);
      }
    });
  }
});

// 将分类按文章数量排序
const categoriesWithCount = Array.from(categoriesMap.entries())
  .map(([category, posts]) => ({
    category,
    count: posts.length,
    posts,
  }))
  .sort((a, b) => b.count - a.count);

const allCategories = Array.from(categoriesMap.keys());
---

<BaseLayout title={__("categories")}>
  <!-- Header -->
  <HeaderTitle
    title={__("categories")}
    url={`${BASE_URL}/archives/categories`}
    slot="header"
  />
  <!-- Content -->
  <section id="main" aria-label="Main content">
    <div class="categories-outer-wrap" data-aos="fade-up">
      <div class="categories-header">
        <h2 class="categories-title">
          <Icon name="fa6-solid:bookmark" style="margin-right: 8px; vertical-align: middle;" size={20} />
          {__("categories")} ({allCategories.length})
        </h2>
      </div>
      <div class="categories-content">
        {categoriesWithCount.map(({ category, count }) => (
          <a class="category-item" href={`${BASE_URL}/categories/${category}`}>
            <div class="category-item-content">
              <Icon name="fa6-solid:bookmark" style="margin-right: 8px; vertical-align: middle;" size={14} />
              <span class="category-name">{category}</span>
              <span class="category-count">({count})</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
  <!-- Footer -->
  <Footer slot="footer" />
</BaseLayout>

<style lang="stylus">
  .categories-outer-wrap {
    background: var(--color-wrap);
    border-radius: 12px;
    padding: 24px;
    margin: 20px 0;
  }

  .categories-header {
    margin-bottom: 24px;
    padding-bottom: 16px;
    border-bottom: 2px solid var(--red-1);
  }

  .categories-title {
    color: var(--red-2);
    font-size: 24px;
    font-weight: bold;
    margin: 0;
    display: flex;
    align-items: center;
  }

  .categories-content {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
  }

  .category-item {
    display: inline-block;
    text-decoration: none;
    transition: transform 0.2s, box-shadow 0.2s;
    
    &:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 12px var(--color-red-6-shadow);
    }
  }

  .category-item-content {
    color: var(--red-1);
    display: flex;
    align-items: center;
    text-transform: uppercase;
    background: var(--red-5-5);
    border-radius: 8px;
    padding: 10px 18px;
    box-shadow: var(--shadow-meta);
    font-size: 14px;
    font-weight: 500;
    transition: background 0.2s, color 0.2s;
  }

  .category-item:hover .category-item-content {
    background: var(--red-4);
    color: var(--red-0);
  }

  .category-name {
    margin-right: 6px;
  }

  .category-count {
    font-size: 12px;
    opacity: 0.8;
    font-weight: normal;
  }

  :global([data-theme='dark']) {
    .categories-title {
      color: var(--red-1);
    }
    
    .category-item-content {
      background: var(--red-5-5);
    }
    
    .category-item:hover .category-item-content {
      background: var(--red-6);
    }
  }
</style>

