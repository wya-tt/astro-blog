---
import { getCollection, type CollectionEntry } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import { __ } from "../utils/i18n";
import Footer from "../components/Footer.astro";
import HeaderTitle from "../components/HeaderTitle.astro";
import { BASE_URL } from "../utils/config";
import { Icon } from "astro-icon/components";

// 获取所有文章并统计标签
const posts = await getCollection("blog");
const tagsMap: Map<string, CollectionEntry<"blog">[]> = new Map();

posts.forEach((post) => {
  if (Array.isArray(post.data.tags)) {
    post.data.tags.forEach((tag) => {
      if (tagsMap.has(tag)) {
        tagsMap.get(tag)!.push(post);
      } else {
        tagsMap.set(tag, [post]);
      }
    });
  }
});

// 将标签按文章数量排序
const tagsWithCount = Array.from(tagsMap.entries())
  .map(([tag, posts]) => ({
    tag,
    count: posts.length,
    posts,
  }))
  .sort((a, b) => b.count - a.count);

const allTags = Array.from(tagsMap.keys());
---

<BaseLayout title={__("tags")}>
  <!-- Header -->
  <HeaderTitle
    title={__("tags")}
    url={`${BASE_URL}/tags`}
    slot="header"
  />
  <!-- Content -->
  <section id="main" aria-label="Main content">
    <div class="tags-outer-wrap" data-aos="fade-up">
      <div class="tags-header">
        <h2 class="tags-title">
          <Icon name="fa6-solid:tags" style="margin-right: 8px; vertical-align: middle;" size={20} />
          {__("tags")} ({allTags.length})
        </h2>
      </div>
      <div class="tags-content">
        {tagsWithCount.map(({ tag, count }) => (
          <a class="tag-item" href={`${BASE_URL}/tags/${tag}`}>
            <div class="tag-item-content">
              <Icon name="fa6-solid:tag" style="margin-right: 8px; vertical-align: middle;" size={14} />
              <span class="tag-name">{tag}</span>
              <span class="tag-count">({count})</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
  <!-- Footer -->
  <Footer slot="footer" />
</BaseLayout>

<style lang="stylus">
  .tags-outer-wrap {
    background: var(--color-wrap);
    border-radius: 12px;
    padding: 24px;
    margin: 20px 0;
  }

  .tags-header {
    margin-bottom: 24px;
    padding-bottom: 16px;
    border-bottom: 2px solid var(--red-1);
  }

  .tags-title {
    color: var(--red-2);
    font-size: 24px;
    font-weight: bold;
    margin: 0;
    display: flex;
    align-items: center;
  }

  .tags-content {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
  }

  .tag-item {
    display: inline-block;
    text-decoration: none;
    transition: transform 0.2s, box-shadow 0.2s;
    
    &:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 12px var(--color-red-6-shadow);
    }
  }

  .tag-item-content {
    color: var(--red-1);
    display: flex;
    align-items: center;
    text-transform: uppercase;
    background: var(--red-5);
    border-radius: 8px;
    padding: 10px 18px;
    box-shadow: var(--shadow-meta);
    font-size: 14px;
    font-weight: 500;
    transition: background 0.2s, color 0.2s;
  }

  .tag-item:hover .tag-item-content {
    background: var(--red-4);
    color: var(--red-0);
  }

  .tag-name {
    margin-right: 6px;
  }

  .tag-count {
    font-size: 12px;
    opacity: 0.8;
    font-weight: normal;
  }

  :global([data-theme='dark']) {
    .tags-title {
      color: var(--red-1);
    }
    
    .tag-item-content {
      background: var(--red-5-5);
    }
    
    .tag-item:hover .tag-item-content {
      background: var(--red-6);
    }
  }
</style>

